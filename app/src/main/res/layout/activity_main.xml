<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open BBC"
        android:id="@+id/BBCbutton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dial Number"
        android:id="@+id/dialButton"
        android:layout_below="@+id/BBCbutton"
        android:layout_alignLeft="@+id/BBCbutton"
        android:layout_alignStart="@+id/BBCbutton"
        android:layout_marginTop="38dp"
        android:onClick="dialNumber" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Map"
        android:id="@+id/mapButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="loadMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:id="@+id/contactsButton"
        android:layout_below="@+id/mapButton"
        android:layout_alignLeft="@+id/mapButton"
        android:layout_alignStart="@+id/mapButton"
        android:layout_marginTop="44dp"
        android:onClick="openContacts" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shapes"
        android:id="@+id/shapesButton"
        android:layout_below="@+id/contactsButton"
        android:layout_alignLeft="@+id/contactsButton"
        android:layout_alignStart="@+id/contactsButton"
        android:layout_marginTop="47dp"
        android:onClick="loadShapeActivity" />
</RelativeLayout>
